<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>classpath:context/cloud-beans.xml</param-value>
    </context-param>
    <filter>
        <filter-name>sso</filter-name>
        <filter-class>com.datayes.paas.sso.AuthFilter</filter-class>
        <init-param>
            <param-name>authUrl</param-name>
            <param-value>https://10.20.112.214:9443/samlsso</param-value>
        </init-param>
        <init-param>
            <param-name>consumerUrl</param-name>
            <param-value>https://10.20.102.145:8444/cloud/consumer</param-value>
        </init-param>
        <init-param>
            <param-name>index</param-name>
            <param-value>1086313079</param-value>
        </init-param>
        <init-param>
            <param-name>ignore</param-name>
            <param-value>/resources/.*,/signup,/login</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>sso</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>cloud</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>classpath:context/cloud-web.xml</param-value>
        </init-param>
        <load-on-startup>100</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>cloud</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index</welcome-file>
    </welcome-file-list>
</web-app>
